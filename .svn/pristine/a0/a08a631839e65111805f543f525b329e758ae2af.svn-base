DKDEPEND(SDL2-2.0.4)

### INSTALL ###
DKINSTALL(http://DigitalKnob.com/Download/Libs/SDL2_mixer-2.0.1.zip SDL2_mixer-2.0.1)
DKSET(SDLMIXER ${3RDPARTY}/SDL2_mixer-2.0.1)


### LINK ###
DKINCLUDE(${SDLMIXER})
WIN_DEBUG_LIB(${SDLMIXER}/${OS}/lib/Debug/SDL_mixer.lib)
WIN_RELEASE_LIB(${SDLMIXER}/${OS}/lib/Release/SDL_mixer.lib)
APPLE_DEBUG_LIB(${SDLMIXER}/${OS}/lib/${DEBUG}/SDL_mixer.a)
APPLE_RELEASE_LIB(${SDLMIXER}/${OS}/lib/${RELEASE}/SDL_mixer.a)
LINUX_DEBUG_LIB(${SDLMIXER}/linux/lib/Debug/libSDL_mixer.a)
LINUX_RELEASE_LIB(${SDLMIXER}/linux/lib/Release/libSDL_mixer.a)
#ANDROID_DEBUG_LIB(${SDLMIXER}/${OS}/${DEBUG}/libs/armeabi-v7a/libSDL_mixer.a)
#ANDROID_RELEASE_LIB(${SDLMIXER}/${OS}/${RELEASE}/libs/armeabi-v7a/libSDL_mixer.a)


### COMPILE ###
DKSETPATH(${SDLMIXER}/${OS})
WIN32_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo /D__FLTUSED__" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" -DSDL2_DIR=${SDL} -DSDL2_INCLUDE_DIR=${SDL}/include -DSDL2_LIBRARY=${SDL}/${OS}/Release/SDL2.lib -DZLIB_INCLUDE_DIR=${ZLIB} -DZLIB_LIBRARY=${ZLIB}/${OS}/Release/zlibstatic.lib -DWIN_32=ON ${SDLMIXER})
WIN32_VS_DEBUG(SDL2_mixer-2.0.1 SDLMIXER.sln SDLMIXER)
WIN32_VS_RELEASE(SDL2_mixer-2.0.1 SDLMIXER.sln SDLMIXER)

DKSETPATH(${SDLMIXER}/${OS})
WIN64_COMMAND(${CMAKE_COMMAND} -G ${X64GENERATOR} "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo /D__FLTUSED__" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" -DSDL2_DIR=${SDL} -DSDL2_INCLUDE_DIR=${SDL}/include -DSDL2_LIBRARY=${SDL}/${OS}/Release/SDL2.lib -DZLIB_INCLUDE_DIR=${ZLIB} -DZLIB_LIBRARY=${ZLIB}/${OS}/Release/zlibstatic.lib -DWIN_64=ON ${SDLMIXER})
WIN64_VS_DEBUG(SDL2_mixer-2.0.1 SDLMIXER.sln SDLMIXER)
WIN64_VS_RELEASE(SDL2_mixer-2.0.1 SDLMIXER.sln SDLMIXER)

DKSETPATH(${SDLMIXER}/${OS})
MAC_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 -DSDL2_DIR=${SDL} -DSDL2_INCLUDE_DIR=${SDL}/include -DSDL2_LIBRARY=${SDL}/${OS}/Release/libSDL2.a -DZLIB_INCLUDE_DIR=${ZLIB} -DZLIB_LIBRARY=${ZLIB}/${OS}/Release/libz.a -DMAC=ON ${SDLMIXER})
MAC_XCODE_DEBUG(SDL2_mixer-2.0.1 SDLMIXER)
MAC_XCODE_RELEASE(SDL2_mixer-2.0.1 SDLMIXER)

